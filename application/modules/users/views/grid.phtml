<script>
    // use data-spy="grid" for use AJAX for reload grid
    require(['bluz.grid'], function (grid) {
        var $filterForm = $('form.filter-form');
        var $dropToggle = $filterForm.find('button.dropdown-toggle');
        var $filterField = $filterForm.find('[name=field]');
        $filterForm.find('.dropdown-menu').on('click', 'a', function(e){
            var filter = $(this).data('filter');
            var title = $(this).text();
            $dropToggle.html(title + '  <span class="caret"></span>');
            $filterField.val(filter);
            e.preventDefault();
        });
    });
</script>

